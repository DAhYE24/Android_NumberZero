<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dh_kang.nozero">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <!-- Permission 꼭 체크하기 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- NETWORK PERMISSION -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- DEVICE PHONENUMBER PERMISSION -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 이건 없어도 될거 같으므로 체크하기 -->


    <!-- 이미지 불러오기 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <!-- android:theme은 타이틀바 제거 옵션 -->
        <activity android:name=".ActiBegin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActiMain"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity android:name=".ActiPerfResult" />
        <activity
            android:name=".ActiBoard"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity android:name=".ActiWrite" />
        <activity
            android:name=".ActiBoardContent"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity android:name=".ActiPerfDetail" />
        <activity android:name=".ActiStory"></activity>
    </application>

</manifest>