<resources>

    <!-- Base application theme. -->
    <style name="NumberZeroAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appColorPurple</item>
        <item name="colorPrimaryDark">@color/appColorDarkNavy</item>
        <item name="colorAccent">@color/hotPink</item>
        <item name="actionBarStyle">@style/RemoveShadow</item>
    </style>

    <style name="RemoveShadow" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="logo">@android:drawable/ic_menu_edit</item>
        <item name="title">@string/app_name</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
    </style>

</resources>