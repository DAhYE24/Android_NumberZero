<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_sample"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff">

        <View
            android:layout_height="5px"
            android:background="#393939"
            android:layout_width="fill_parent"/>

        <View
            android:layout_height="3px"
            android:layout_marginTop="3dp"
            android:background="#393939"
            android:layout_width="fill_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="*QnA 게시판"
            android:id="@+id/aw_txtType"
            android:layout_margin="10dp" />

        <View
            android:layout_height="3px"
            android:background="#393939"
            android:layout_width="fill_parent"/>

        <View
            android:layout_height="5px"
            android:background="#393939"
            android:layout_marginTop="3dp"
            android:layout_width="fill_parent"/>

        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="제목"
            android:textColor="#000000"
            android:layout_weight="0.2" />

        <View
            android:layout_height="15dp"
            android:background="#858484"
            android:layout_width="3px"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/aw_editTitle"
            android:textCursorDrawable="@null"
            android:backgroundTint="#b37e6969"
            android:inputType="textPersonName"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_weight="0.8"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="내용"
            android:inputType="text"
            android:textColor="#000000"
            android:layout_weight="0.2"
            android:layout_marginTop="10dp" />

        <View
            android:layout_height="15dp"
            android:background="#858484"
            android:layout_width="3px"
            android:layout_marginTop="13dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@drawable/sample_writing"
            android:layout_marginLeft="15dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@null"
                android:backgroundTint="#b37e6969"
                android:id="@+id/aw_editContent"
                android:textSize="15sp"
                android:lineSpacingExtra="5dip"
                android:textColor="#000000"
                android:maxLines="19"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="글쓰기"
        android:id="@+id/aw_btnWrite"
        android:layout_weight="0.1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_sample"
        android:layout_marginBottom="5dp" />

</RelativeLayout>
