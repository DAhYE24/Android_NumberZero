<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_basic"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/flavor_info_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="1dp"
        android:background="@color/darkPurple" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="1.5dp"
        android:background="@color/darkPurple" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_flavorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flavor_info_type"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_flavorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flavor_info_name"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_flavorContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flavor_info_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />
    </LinearLayout>

    <!--android:layout_marginLeft="20dp"-->
    <!--android:layout_marginRight="20dp"-->
    <!--android:layout_marginTop="10dp"-->

    <Button
        android:id="@+id/btn_exitFlavorInfo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/purple"
        android:text="@string/flavor_info_btn"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

</LinearLayout>