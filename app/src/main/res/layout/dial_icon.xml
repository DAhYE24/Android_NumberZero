<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="250dp"
        android:layout_height="330dp"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ICON"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_weight="0.15" />

        <View
            android:layout_height="5px"
            android:background="#393939"
            android:layout_width="fill_parent"/>

        <View
            android:layout_height="3px"
            android:layout_marginTop="3dp"
            android:background="#393939"
            android:layout_width="fill_parent"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/di_imgIcon1"
                    android:layout_weight="1"
                    android:src="@drawable/user_icon0"
                    android:padding="5dp"
                    android:onClick="ChangeIcon" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/di_imgIcon2"
                    android:layout_weight="1"
                    android:src="@drawable/user_icon1"
                    android:padding="5dp"
                    android:onClick="ChangeIcon" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/di_imgIcon3"
                    android:layout_weight="1"
                    android:src="@drawable/user_icon2"
                    android:padding="5dp"
                    android:onClick="ChangeIcon" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/di_imgIcon4"
                    android:layout_weight="1"
                    android:src="@drawable/user_icon3"
                    android:padding="5dp"
                    android:onClick="ChangeIcon" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:id="@+id/di_btnOk"
            android:text="확인"
            android:layout_weight="0.15" />
</LinearLayout>