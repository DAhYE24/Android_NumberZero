<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/option_view_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#ccc"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"></FrameLayout>

    <FrameLayout
        android:id="@+id/option_view_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#33f"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"></FrameLayout>

    <FrameLayout
        android:id="@+id/option_view_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#f66"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"></FrameLayout>

    <FrameLayout
        android:id="@+id/swipeable_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/turbidLightPurple"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">
        <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
        <!--android:paddingRight="@dimen/activity_horizontal_margin"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_writerImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/txt_writerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingStart="15dp"
                    android:text="@string/writing_writer_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_writingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="55dp"
                android:text="@string/writing_title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_writingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="5dp"
                android:text="@string/writing_time"
                android:textColor="@color/turbidPurple"
                android:textSize="12sp" />

        </LinearLayout>
    </FrameLayout>
</FrameLayout>