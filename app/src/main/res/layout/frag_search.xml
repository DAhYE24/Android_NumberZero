<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/turbidLightPurple"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/purple"
        android:padding="5dp"
        android:layout_weight="0.05">

        <Spinner
            android:id="@+id/spin_searchType"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/img_spin_box"
            android:entries="@array/spinner_menu"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/btn_searchByList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_main_search"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

    </RelativeLayout>

    <View
        android:layout_marginTop="3dp"
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/darkPurple" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:layout_marginTop="3dp"
        android:background="@color/darkPurple" />

    <ListView
        android:id="@+id/list_searchView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:choiceMode="multipleChoice"
        android:divider="@color/darkPurple"
        android:dividerHeight="1dp" />
</LinearLayout>