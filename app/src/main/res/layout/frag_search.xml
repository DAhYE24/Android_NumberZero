<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:src="@drawable/title_search"
        android:paddingTop="30dp"
        android:paddingBottom="30dp" />

    <View
        android:layout_height="5px"
        android:background="#393939"
        android:layout_width="fill_parent"/>

    <View
        android:layout_height="3px"
        android:layout_marginTop="3dp"
        android:background="#393939"
        android:layout_width="fill_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <Spinner
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/spin_search"
                android:id="@+id/fs_spinType"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:entries="@array/search_menu"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp" />

            <ImageButton
                android:layout_width="37dp"
                android:layout_height="40dp"
                android:id="@+id/fs_btnSearch"
                android:background="@drawable/btn_search"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="전체해제"
                android:id="@+id/fid_btnCheck"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/fs_btnSearch"
                android:background="@drawable/sbtn_sample"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

        </RelativeLayout>

        <View
            android:layout_height="3px"
            android:background="#393939"
            android:layout_width="fill_parent" />

        <View
            android:layout_height="5px"
            android:background="#393939"
            android:layout_marginTop="3dp"
            android:layout_width="fill_parent"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="#c8bebaba"
            android:dividerHeight="1dp"
            android:choiceMode="multipleChoice"
            android:id="@+id/fs_lvSearch"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.9" />

    </LinearLayout>

</LinearLayout>