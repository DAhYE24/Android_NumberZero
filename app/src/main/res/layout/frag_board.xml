<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="80dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ab_editSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:backgroundTint="#b37e6969"
                android:hint="제목, 내용 검색"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:textColor="#b37e6969"
                android:textColorHint="#989898"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ab_btnSearch"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:src="@android:drawable/ic_menu_search" />

            <ImageButton
                android:id="@+id/ab_btnWrite"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:src="@android:drawable/ic_menu_edit" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5px"
            android:background="#393939" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="3px"
            android:layout_marginTop="3dp"
            android:background="#393939" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <ListView
                android:id="@+id/ab_lvBoard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#707070"
                android:dividerHeight="1dp" />

            <ImageView
                android:id="@+id/ab_imgNothing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>