<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:weightSum="1"
    tools:context=".Activity.ActiMain"
    android:background="@drawable/img_splash">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.88"
        android:id="@+id/am_lyFrag"
        android:background="#ffffff"
        android:padding="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="향수\n정보"
            android:id="@+id/am_btnInfo"
            android:layout_weight="0.2"
            android:onClick="ChangeFragment"
            android:background="@drawable/btn_white_border"
            android:layout_margin="3dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="향수\n검색"
            android:id="@+id/am_btnSearch"
            android:layout_weight="0.2"
            android:onClick="ChangeFragment"
            android:background="@drawable/btn_white_border"
            android:layout_margin="3dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="넘버\n제로"
            android:id="@+id/am_btnMain"
            android:layout_weight="0.2"
            android:onClick="ChangeFragment"
            android:background="@drawable/btn_clicked"
            android:layout_margin="3dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="향수\n토크"
            android:id="@+id/am_btnBoard"
            android:layout_weight="0.2"
            android:onClick="ChangeFragment"
            android:background="@drawable/btn_white_border"
            android:layout_margin="3dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="MY\n향수"
            android:id="@+id/am_btnMy"
            android:layout_weight="0.2"
            android:onClick="ChangeFragment"
            android:background="@drawable/btn_white_border"
            android:layout_margin="3dp"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>
